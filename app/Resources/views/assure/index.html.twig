{% extends 'base.html.twig' %}

{% block container %}
    <h1>Liste des assures </h1>

    <table class="table table-striped jambo_table bulk_action">
        <thead>
        <tr class="headings">
            <th class="column-title">Codeassure</th>
            <th class="column-title">Cin</th>
            <th class="column-title">Raison_social</th>
            <th class="column-title">Responsable_societe</th>
            <th class="column-title">Nom</th>
            <th class="column-title">Prenom</th>
            <th class="column-title">Adresse</th>
            <th class="column-title">Email</th>
            <th class="column-title">Tel</th>
            <th class="column-title">Fax</th>
            <th class="column-title">Profession</th>
            <th class="column-title">Dateenreg</th>
            <th class="column-title">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for assure in assures %}
            <tr class="headings">
                <td><a class="btn btn-success" href="{{ path('assure_show', { 'id': assure.id }) }}">{{ assure.id }}</a>
                </td>
                <td>{{ assure.cin }}</td>
                <td>{{ assure.raisonsocial }}</td>
                <td>{{ assure.responsablesociete }}</td>
                <td>{{ assure.nom }}</td>
                <td>{{ assure.prenom }}</td>
                <td>{{ assure.adresse }}</td>
                <td>{{ assure.email }}</td>
                <td>{{ assure.tel }}</td>
                <td>{{ assure.fax }}</td>
                <td>{{ assure.profession }}</td>
                <td>{% if assure.dateEnreg %}{{ assure.dateEnreg|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('assure_show', { 'id': assure.id }) }}">Afficher</a>
                    <a class="btn btn-warning" href="{{ path('assure_edit', { 'id': assure.id }) }}">Modifier</a>
                    <a class="btn btn-warning" href="{{ path('assure_delete', { 'id': assure.id }) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-warning" href="{{ path('assure_new') }}">Nouveau assure</a>
{% endblock %}
